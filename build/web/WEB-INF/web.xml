<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>RequestFilter</filter-name>
        <filter-class>com.epam.java_training.huzarevich.restaurant.filter.RequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.epam.java_training.huzarevich.restaurant.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/check-login</url-pattern>
        <url-pattern>/registration</url-pattern>
        <url-pattern>/check-registration</url-pattern>
        <url-pattern>/choice-registration</url-pattern>
        <url-pattern>/admin-panel</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/find-train</url-pattern>
        <url-pattern>/create-invoice</url-pattern>
        <url-pattern>/create-order</url-pattern>
        <url-pattern>/view-client-orders</url-pattern>
        <url-pattern>/view-orders</url-pattern>
        <url-pattern>/view-products</url-pattern>
        <url-pattern>/add-food</url-pattern>
        <url-pattern>/update-food</url-pattern>
        <url-pattern>/do-order</url-pattern>
        <url-pattern>/cancel-order</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>pages/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
